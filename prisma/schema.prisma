generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  role      String    @default("student") // "student", "teacher", "admin"
  grupo     Int       @default(0) // 0 = admin/teacher, 1 o 2 = estudiantes
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]

  @@index([email])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Topic {
  id        String   @id @default(cuid())
  slug      String   @unique // URL slug del tema (ej: "experimentos-aleatorios-y-espacios-de-probabilidad")
  title     String   // Título del tema
  visible   Boolean  @default(true) // Si el tema es visible para los estudiantes
  order     Int      @default(0) // Orden de aparición
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([visible])
}